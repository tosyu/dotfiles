function rmd() {
	pandoc "$1" | lynx -stdin
}

alias zsh_aliases="$EDITOR ~/.zsh_aliases"
alias vimrc="$EDITOR ~/.config/nvim/init.vim"
alias nvimrc="vimrc"
alias lvimrc="$EDITOR ./.vimrc"

alias less='less -R -X'
alias grep='grep --color'
alias sgrep='grep -R -n -H -C 5 --exclude-dir={.git,.svn,CVS}'

alias help='man'

alias rcp="rsync -avzhP"
alias rcpr="rsync_cp -r"

alias tmux="tmux -2 -f ~/.tmux.conf"

alias weather_warsaw="curl wttr.in/warsaw"
alias weather_grodzisk="curl wttr.in/grodzisk-mazowiecki"

